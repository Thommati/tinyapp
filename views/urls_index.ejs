<%- include('partials/_head') %>
<%- include('partials/_header') %>
  
  <main style="margin: 1em;">
    <h3>My URLs</h3>
    <% if (user) { %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Short URL</th>
            <th scope="col">Long URL</th>
            <th scope="col">Created</th>
            <th scope="col">Total / Unique Visits</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% for(let url in urls) { %>
            <tr>
              <td><%= url %></td>
              <td><%= urls[url].longURL %></td>
              <td><%= urls[url].createdAt.toDateString() %></td>
              <td class="pl-5"><%= urls[url].totalVisits %> / <%= urls[url].uniqueVisits %></td>
              <td><a class="btn btn-outline-primary" href="/urls/<%= url %>">Edit</a></td>
              <td>
                <form action="/urls/<%= url %>/delete" method="post">
                  <button class="btn btn-outline-danger">Delete</button>
                </form>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
      <a href="/urls/new"><strong>Create New Short Link</strong></a>
    <% } else { %>
      <p>Please <a href="/login">login</a> to see your URLs, or <a href="/register">register</a> if you do not have an account.</p>
    <% } %>
  </main>
  
<%- include('partials/_end') %>
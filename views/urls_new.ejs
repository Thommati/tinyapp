<%- include('partials/_head') %>
<%- include('partials/_header') %>

  <main class="container mt-5">
    <div class="row">
      <div class="col-8 mx-auto">
        <h3 class="text-center">Create TinyURL</h3>
        <form class="form-inline" action="/urls" method="POST">
          <div class="form-group mx-auto mb-2">
            <label for="longURL">Enter a URL:</label>
            <input class="form-control" type="text" name="longURL" placeholder="https://" style="width: 300px; margin: 1em">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        </form>
      </div>
    </div>
  </main>
  
<%- include('partials/_end') %>